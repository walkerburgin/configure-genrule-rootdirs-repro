{
  "compilerOptions": {
    "declaration": true,
    "target": "es2022",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "rootDirs": ["src", "dist"]
  },
  "include": ["src"]
}

